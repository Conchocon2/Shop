@model PagedList.IPagedList<Models.EF.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Danh sách tài khoản</h4>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <div class="col-lg-4">
                        @using (Html.BeginForm("Index", "Product", FormMethod.Get))
                        {
                            <div class="input-group custom-search-form">
                                <input type="text" name="searchString" value="@ViewBag.searchString" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        }
                    </div>
                    <hr>
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="text-align:center;">Loại SP</th>
                                <th style="text-align:center;">Tên SP</th>
                                <th style="text-align:center;">Giá</th>
                                <th style="text-align:center;">Khuyễn Mãi(%)</th>
                                <th style="text-align:center;">Ảnh</th>
                                <th style="text-align:center;">Ngày Tạo</th>
                                <th style="text-align:center;">Mô tả</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="text-align:center;">@item.Cate_ID</td>
                                    <td style="text-align:center;">@item.Name</td>
                                    <td style="text-align:center;">@item.Price</td>
                                    <td style="text-align:center;">@item.Discount</td>
                                    <td style="text-align:center;">
                                        <img src="@Url.Content(item.ImageLink)" width="100" />
                                        @item.ImageLink
                                    </td>
                                    <td style="text-align:center;">@item.CreateDate</td>
                                    <td style="text-align:center; max-width:300px">
                                        <div style="max-height:200px">
                                            @Html.Raw(item.Describe)
                                        </div>
                                    </td>
                                    <td>
                                        <a href="~/Admin/Product/Edit/@item.ID">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xóa bản ghi này? Xóa bản ghi sẽ xóa kèm theo hóa đơn!",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.searchString }))
                </div>
            </div>
        </div>
    </div>
</div>
