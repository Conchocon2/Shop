@model Shop.Areas.Admin.Models.LoginModels
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Content/admin/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/admin/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet" />
    <link href="~/Content/admin/dist/css/sb-admin-2.css" rel="stylesheet" />
    <link href="~/Content/admin/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                        {
                            @Html.ValidationSummary(false, "", "error")
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @autofucus = "autofucus" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                                </div>
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(model => model.RememberMe)Remember Me
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/admin/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/Content/admin/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Content/admin/bower_components/metisMenu/dist/metisMenu.min.js"></script>
    <script src="~/Content/admin/dist/js/sb-admin-2.js"></script>
</body>
</html>

